' Gambas class file


Public Sub Form_Open()
  Ergebnisdarstellung()
End

Public Sub Form_Close()
  FInitialisierung.Show
End


Public Sub Ergebnisdarstellung()
Dim i As Integer
    
   gdvKlima.Columns.count = 2
   gdvKlima.Columns[0].Title = "Jahr"
   gdvKlima.Columns[0].Width = 100
   gdvKlima.Columns[1].Title = "Heizgradtage [Kd/a]"
   gdvKlima.Columns[1].Width = 230
   gdvKlima.Rows.count = Global.intKlimadatenJahreKW
   
   For i = 0 To Global.intKlimadatenJahreKW - 1
    gdvKlima[i, 0].text = CStr(Global.fltTagesMittelTemperaturKW[3, i, 1] * 100 + Global.fltTagesMittelTemperaturKW[4, i, 1])
    gdvKlima[i, 1].text = CStr(Global.fltTagesMittelTemperaturKW[5, i, 0])
   Next
  
End



Public Sub btnOK_Click()
  Global.intKlimadatenAuswahlJahrKW = gdvKlima.row
  Global.fltGradtagszahlKW = CFloat(gdvKlima[gdvKlima.row, 1].text)
  Programmcode.schreibeDWDKW()
  FInitialisierungDateiwahl8.Close
  FInitialisierung.Show
  FInitialisierung.Enabled = True
  FInitialisierung.Form_open
End
